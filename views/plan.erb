<% if session[:uid] %>
<div class="container" id="alert-container">
</div>
<div class="carousel slide" id="carousel-year" data-interval="false">
	<ol class="carousel-indicators">
		<li data-target="#carousel-year" data-slide-to="0"></li>
		<li data-target="#carousel-year" data-slide-to="1"></li>
		<li data-target="#carousel-year" data-slide-to="2"></li>
		<li data-target="#carousel-year" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner">
		<% count=0 %>
		<% for i in 1..4%>
		<% if i==1 %>
		<div class="item active">
		<% else %>
		<div class="item">
		<% end %>
			<div class="container">
				<center><h1>Year <%= i %></h1></center>
				<div class="row">
					<% 2.times do |n| %>
					<% count+=1 %>
					<div class="jumbotron col-md-6" id="sem<%= count %>">
						<div class="container">
							<h2>Semester <%= count %></h2>
							<center>
								<form role="form" id="modules<%= count %>">
									<div class="form-group">
										<label for="module-sem<%= count %>">Press Enter to Add Module</label>				
										<div>
											<input type="text" class="form-control module-input" placeholder="Add module to this sem" autocomplete="off" id="input-sem<%= count %>">
										</div>
									</div>
								</form>
							</center>
							<table class="table sem-table" id="sem<%= count %>-table">
								<thead>
									<tr>
										<th>Code</th>
										<th>Name</th>
										<th></th>
									</tr>
								</thead>
								<tbody id="content-sem<%= count %>">
								</tbody>
							</table>
							<center><p>Total MC: <span id="total-credit<%= count%>">0</span></p></center>
						</div>
					</div>
					<% end %>
				</div>
				<div class="carousel-caption">Year <%= i %></div>
			</div>	
		</div>
		<% end %>
	</div>
	<a class="left carousel-control" href="#carousel-year" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a href="#carousel-year" class="right carousel-control" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>
<center><button class="btn btn-primary popover-dismiss" id="save-plan-btn">Save your plan!</button></center>
<div class="modal fade" id="moduleDetails" role="dialog" tabindex="-1" aria-labelledby="moduleTitle" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="moduleTitle"></h4>
            </div>
            <div class="modal-body">
                <div id="moduleDescription">a</div>
                <div id="moduleCredit">a</div>
                <div id="moduleWorkload">a</div>
                <div id="modulePrereq">a</div>
                <div id="modulePreclus">a</div>
                <div id="moduleSemester">a</div>
            </div>
        </div>
    </div>  
</div>
<% else %>
<div class="container">
	<div class="jumbotron">
		<center><h3>Sorry, you need to sign in in order to use this feature</h3></center>
		<center><a href="javascript:login()" role="button" class="btn btn-primary" id="login-message-button">Sign in</a></center>
	</div>
</div>
<% end %>


